{% extends "base.twig" %}
{%- block Header -%}
    {#- This is fucking TERRIBLE! -#}
    <script>$(".header-container").css("display", "none");</script>
{% endblock %}
{%- block Container -%}
    <style>
        /*  TODO: Don't inline style any of this stuff!
                  Put all user CSS in a MD5 hashed thingymcbob,
                  could just be a hash of their username then
                  accessible by /css/.
        */

        #banner {
            background-image: url("/cdn/{{ User.banner }}");
            border-bottom: var(--primary-border-color);
        }

        .user-album-container {

        }
    </style>
    <div class="alternative-header">
        <h3 class="inline-block"><a href="/">witter</a></h3>
        <div class="links inline-block float-right no-border-left">
            <a href="/user/{{ Session.Handle }}">@{{ Session.Handle }}</a>
            <a href="/feed">feed</a>
            <a href="/settings">settings</a>
        </div>
    </div>
    <div class="padding header user-header" id="banner">
        <!-- TODO: This looks extremely ugly on the templating side. Don't do this! -->
        <div class="header-items right">
            <a href="/"><h1>[witter]</h1></a>
            <div class="right align-right">
                {% if Session.Handle is not defined %}
                    <a href="/users">users</a>
                    <a href="/feed">feed</a>
                    <a href="/">login</a>
                {% else %}
                    <a href="/user/{{ Session.Handle }}">@{{ Session.Handle }}</a>
                    <a href="/feed">feed</a>
                    <a href="/settings">settings</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="padding user-panel">
        <div class="user-card wide">
            <img class="profile-picture" src="/cdn/{{ User.profile_picture }}">
            <div class="user-metadata inline-block top">
                <b>{{ User.nickname }}</b>
                <span class="caption inline-block" style="width: unset;">@{{ User.username }}</span><br>
                <span class="caption">joined {{ User.created|timeago }}</span><br>
                <span class="caption">last online {{ User.last_login|timeago }}</span>
                <button 
                    class="button left follow_button" 
                    {% if Session.Handle == User.username %}disabled{% endif %}
                    data-following="{% if User.following and Session.Handle != User.username %}true{% else %}false{% endif %}" 
                    data-follow-target="{{ User.id }}" 
                    aria-label="Follow">
                    {% if User.following and Session.Handle != User.username %}unfollow{% else %}follow{% endif %}
                </button>
            </div>
        </div>

        <div class="tab-group">
            <a href="/user/{{ User.username }}"><div class="tab {% if ActiveTab == 'all' %}primary{% endif %}">weets</div></a>
            <a href="/user/{{ User.username }}/media"><div class="tab {% if ActiveTab == 'media' %}primary{% endif %}">media</div></a>
            <a href="/user/{{ User.username }}/likes"><div class="tab {% if ActiveTab == 'likes' %}primary{% endif %}">liked weets</div></a>
        </div>
    </div>
    <hr>
    <div class="padding user-album-container">
        <div class="user-album">
            <div class="album-cover">
                <img src="https://lastfm.freetls.fastly.net/i/u/770x0/ad411c7812cf657816d5d60e0e099023.jpg#ad411c7812cf657816d5d60e0e099023">
            </div>
            <div class="album-metadata top inline-block">
                <div class="song-title bold">Icky <span class="caption">(scrobbled 1 minute ago)</span></div>
                <div class="album-title">#2EVIL</div>
                <div class="artist-title">Octi</div>
            </div>
            <div class="right no-border-left">
                <button>play on spotify</button>
            </div>
        </div>
    </div>
    <hr>
    <div class="padding">
        <div class="user-description">
            <span class="caption">{{ User.description }}</span>
        </div>
        <div class="user-follow-metric">
            <span class="caption"><b><a class="keep-color" href="/user/{{ User.username }}/followers">{{ User.followers }}</b> follower(s), </a></span>
            <span class="caption"><b><a class="keep-color" href="/user/{{ User.username }}/following">{{ User.following }}</b> following</a></span>
        </div>
    </div>
    <hr>
    <div class="padding">
        {% for Weet in Feed %}
            {% if Weet.id is defined %}
                <div class="weet">
                    <div class="inline-block padding top">
                        <img src="/cdn/{{ Weet.user.profile_picture }}" class="profile-picture">
                    </div>
                    <div class="comment-body inline-block padding">
                        <span class="comment-info inline-block">
                            <a href="/user/{{ Weet.user.username }}"><b class="comment-author">{{ Weet.user.nickname }}</b> @{{ Weet.user.username }}</a>
                            <span class="caption">{{ Weet.feed_created|timeago }}</span>
                        </span>
                        <span class="comment-text inline-block">{{ Weet.feed_text|nl2br }}</span>
                        <div class="comment-actions">
                            <a href="/user/{{ Weet.user.username }}/weet/{{ Weet.id }}">
                                <span class="comment-action inline-block">
                                    <span class="comment-action-text">{{ Weet.replies }}</span> 
                                    <i class="far fa-comment"></i>
                                </span>
                            </a>
                            <span class="comment-action comment_like inline-block {% if Weet.liked %}active{% endif %}" data-comment-id="{{ Weet.id }}">
                                <span class="comment-action-text">{{ Weet.likes }}</span> 
                                <i class="far fa-thumbs-up"></i>
                            </span>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        {% if Feed|length == 0 %}
            <div class="center caption padding-top padding-bottom">
                {% if ActiveTab == 'all' %}
                    This user has no Weets.
                {% elseif ActiveTab == 'likes' %}
                    This user has no liked Weets.
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}