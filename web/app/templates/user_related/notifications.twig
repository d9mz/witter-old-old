{% extends "misc/base.twig" %}
{%- block Container -%}
    <div class="padding no-padding-top">
        <h3><i class="fas fa-bell middle fontawesome-padding"></i> your notifications</h3>
        <span class="caption">all of your notifications from the past week will show up here.</span>
    </div>
    <hr>
    <div class="padding">
        {% for Notification in Notifications %}
            {% if Notification.id is defined %}
                <div class="notification padding">
                    <div class="inline-block fixed-width-notification-icon">
                        <i class="fas fa-{{Notification.icon}}"></i>
                    </div>
                    <div class="notification-content padding-left inline-block top">
                        <img src="/cdn/{{ Notification.user.profile_picture }}" class="profile-picture">
                        <div class="notification-text">
                            <span class="caption padding-bottom-5 inline-block">{{ Notification.last_modified|timeago }}</span><br>
                            {{ Notification.type|raw }}
                            {% if Notification.weet is defined %}
                                <div class="reweet padding full-width-reweet-notif" data-target-url="/user/{{Notification.weet.user.username }}/{{ Notification.weet.feed_id }}">
                                    <b class="comment-author">{{ Notification.weet.user.nickname }}</b> <span class="fake-link">@{{ Notification.weet.user.username }}</span><br>
                                    <span class="comment-text inline-block">{{ Notification.weet.feed_text|escape|combined|raw|nl2br }}</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {% if Notifications|length == 0 %}
            <div class="center caption padding-top padding-bottom">
                You currently have no notifications.
            </div>
        {% endif %}
    </div>
{% endblock %}